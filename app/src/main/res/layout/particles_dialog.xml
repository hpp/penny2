<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/particles_dialog_root_element"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <SeekBar
        android:id="@+id/number_particles_seekbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:max="100000"
        >
    </SeekBar>
    <SeekBar
        android:id="@+id/size_particles_seekbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:max="10"
        >
    </SeekBar>
    <SeekBar
        android:id="@+id/opacity_particles_seekbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:max="100"
        >
    </SeekBar>

</LinearLayout>
